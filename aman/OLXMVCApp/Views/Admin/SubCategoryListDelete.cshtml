@model OLX.Models.Admin.ProductSubCategoryModeljoin

<!DOCTYPE html>
<html>
<head>
    <title>Delete Product Subcategory</title>
    <style>
        .container {
            display: flex;
            justify-content: center;
        }

        .form-border {
            border: 2px solid #282828;
            padding: 20px;
            max-width: 500px;
            width: 100%;
            margin-right: 50px;
            margin-left: 50px;
        }

        .form-horizontal {
            margin-top: 5px;
        }

        .form-group {
            margin-bottom: 10px;
        }

        .form-control {
            width: 100%;
        }

        .delete-button {
            margin-top: 10px;
            margin-bottom: 10px;
            background-color: #FF0000; /* Red background color */
            color: #FFFFFF; /* White text color */
            padding: 10px 20px; /* Padding for better appearance */
            border: none; /* Remove border */
            cursor: pointer; /* Cursor on hover */
            border-radius: 5px; /* Optional: Rounded corners */

            .delete-button:hover {
                background-color: #CC0000; /* Darker red on hover */
            }
    </style>
</head>
<body>
    <div>
        <dl class="dl-horizontal form-border form-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.productSubCategoryId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.productSubCategoryId)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.productCategoryId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.productCategoryId)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.productSubCategoryName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.productSubCategoryName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.createdOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.createdOn)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.updatedOn)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.updatedOn)
            </dd>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="delete-button" onclick="return confirmDelete();" /> 

                </div>
            }
            @Html.ActionLink("Back to List", "SubCategoryList")
        </dl>
    </div>

    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this item?');
        }
    </script>
</body>
</html>
