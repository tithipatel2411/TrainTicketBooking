        /* Style for the select element */
        .c {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f8f8f8;
            color: #333;
            font-size: 16px;
            appearance: none;
        }

            .c option {
                padding: 10px;
                background-color: #f8f8f8;
            }

                /* Style for the selected option */
                .c option:checked {
                    background-color: #007bff;
                    color: #fff;
                }

            /* Remove default arrow in some browsers (e.g., Safari) */
            .c::-webkit-inner-spin-button,
            .c::-webkit-outer-spin-button {
                -webkit-appearance: none;
                appearance: none;
                margin: 0;
            }

            /* Add custom arrow */
            .c::after {
                content: '\25BC'; /* Unicode down arrow character */
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                pointer-events: none;
            }


      
        /* Style for the button */
